<article id="<%= post.layout %>-<%= post.slug %>" class="article article-type-<%= post.layout %>" itemscope itemprop="blogPost">
	<div class="article-inner-front-category">

		<% if (post.link || post.title){ %>
		  <div class="article-header-category">
			<%- partial('post/title-category', {class_name: 'article-title'}) %>
			Posted by <%- post.author || config.author %></span><%- partial('post/datefront', {class_name: 'published-article-date', date_format: null}) %>
		  </div>
		<% } %>
		
		<div class="article-entry-category" itemprop="articleBody">
		  <% if (post.excerpt && index){ %>
			<%- post.excerpt %>
			<% if (theme.excerpt_link){ %>
			  <p class="article-more-link">
				<div class=readmore">
					<a class="readmore" href="<%- url_for(post.path) %>#more"><%= theme.excerpt_link %> <i class="fa fa-angle-right" aria-hidden="true"></i></a>
				</div>
			  </p>
			<% } %>
		  <% } else { %>
			<%- post.content %>
		  <% } %>
		</div>
	</div>
	  <% if (!index){ %>
		<%- partial('post/nav') %>
	  <% } %>
</article>
