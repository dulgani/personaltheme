  <!-- Header -->
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1 class="front">Welcome to Hexo Personal Theme</h1>
					<h4 class="front">Great theme that fit your needs</h4>
					<a class="btn btn-default" style="margin: 20px;" href="#">Download Now</a>
                </div>
            </div>
         </div>
    </header>

	   
	<section class="jekyll">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 text-center">
						<h2 class="black">Recent Posts</h2>
					</div>
					<div class="col-lg-12">
						<div class="recent-blog">
						<% if (site.posts.length){ %>
						  <div class="widget-wrap">
							<div class="widget">
							  <div class="recent-homepage">
								<% site.posts.sort('date', -1).limit(4).each(function(post){ %>
								  <div class="col-md-3">
									<a class="recent" href="<%- url_for(post.path) %>"><%= post.title || '(no title)' %></a>
									<div class="post-excerpt-front"><%- post.excerpt %></div>
									<a class="readmore" href="<%- url_for(post.path) %>#more"><%= theme.excerpt_link %></a> <i class="fa fa-angle-right" aria-hidden="true"></i>
								  </div>
								<% }) %>	
							  </div>
							</div>
						  </div>
						<% } %>
						</div>
					</div>
					<div class="col-lg-12 text-center" style="margin-top: 20px;">
						<a class="btn btn-default readall" href="/categories/blog">Read all blog</a>
					</div>
				</div>
				<hr>
			</div>
	</section>